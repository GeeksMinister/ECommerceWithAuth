@model Product

@inject IProductClientData _productData

@{
    ViewData["Title"] = "Delete Product";
}

<div style="max-width: 70rem; margin: 0 auto;">
    <h2 class="text-danger m-4 text-success">Delete Product</h2>
    <div class="col-md-6 col-lg-4 mb-1 mt-5  fw-bold small text-primary">
        <label asp-for="Guid">Customer Id</label>
        <input asp-for="Guid" class="form-control fw-bold" style="text-transform: uppercase;" disabled/>
    </div>
    <form method="post" asp-action="DeleteProduct_Post" asp-route-id="@Model.Guid" class="fw-bold">
        <div class="row card card-body bg-light shadow-lg pb-3 ">
            <div class="row-cols-1 mb-4 w-100">
                <div class="col-md-4 col-lg-4 mb-3 m-auto">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control" disabled/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class=" col-md-3 col-lg-2 mb-3 m-auto">
                    <label asp-for="Price">Price</label>
                    <input asp-for="Price" type="number" class="form-control text-primary fw-bold" min="1" disabled/>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class=" col-md-3 col-lg-2 mb-3 m-auto">
                    <label asp-for="Quantity">Quantity</label>
                    <input asp-for="Quantity" type="number" class="form-control" min="1" disabled/>
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

                <div class=" col-md-3 col-lg-2 mb-3 m-auto">
                    <label asp-for="DiscountRate">Set Discount&nbsp;&nbsp;&nbsp;<span class="text-danger">%</span> </label>
                    <input asp-for="DiscountRate" type="number" class="form-control text-danger fw-bold" min="1" disabled/>
                    <span asp-validation-for="DiscountRate" class="text-danger"></span>
                </div>

                <div class=" col-md-3 col-lg-2 mb-3 m-auto">
                    <label asp-for="DiscountUntil">Discount until</label>
                    <input asp-for="DiscountUntil" type="date" value="@DateTime.Now.ToShortDateString()"
                           class="form-control" min="1" max="99" disabled/>
                    <span asp-validation-for="DiscountUntil" class="text-danger"></span>
                </div>

                <div class="row mt-4 mb-5 me-0 ms-0">
                    <div class=" col-auto mb-2 m-auto">
                        <label class="form-label" asp-for="CategoryId">Choose Category</label>
                        <select asp-for="Category!.Name" class="form-select text-success fw-bold" disabled>
                            <option>@Model.Category!.Name</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="w-100 mt-5 mb-5  text-center row justify-content-center">
                <button type="submit" class="btn btn-danger fw-bold m-3 col  col-lg-2 col-xl-2">Delete Product</button>
                <a asp-action="Index" class="btn btn-primary m-3 col col-lg-2 col-xl-2">Cancel</a>
            </div>
        </div>
    </form>
</div>

